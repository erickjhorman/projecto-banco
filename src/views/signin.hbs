<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-5 bg-white text-white rounded">
      <div class="card-header text-center pt-5">
        <h1 class="h4 text-black">
          Account Login
        </h1>
      </div>
      <!--
      <img
        class="rounded-circle mx-auto d-block logo m-4"
        src="images/login.png"
        alt="Logo"
      />
      -->
      <div class="card-body">
        <form action="/api/auth/signin" method="POST">
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control bg-white text-black"
              name="email"
              placeholder="Email"
              autofocus
              required
            />
          </div>
          <div class="mb-3">
            <label for="passswore">Password:</label>
            <input
              type="password"
              class="form-control bg-white text-black"
              name="password"
              placeholder="Password"
              required
              maxlength="5"
            />
          </div>
          
          <button class="btn btn-success btn-block">
            Signin
          </button>
        </form>
      </div>

      <!--<p class="text-center mx-auto">Don't Have an Account? <a href="/api/auth/signup" class="text-info">Register</a></p>-->
    </div>
  </div>
</div>